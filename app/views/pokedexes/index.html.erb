<p id="notice"><%= notice %></p>

<h1>Pokedexes</h1>

<%= link_to 'New Pokedex', new_pokedex_path,  class: 'btn btn-primary mb-0'%>

<table class="table table-striped mt-3" border="1">
  <thead class="thead-dark text-center">
      <th>No</th>
      <th>Name</th>
      <th>Base Health Point</th>
      <th>Base Attack</th>
      <th>Base Defence</th>
      <th>Base Speed</th>
      <th>element type</th>
      <th  colspan="3">Action</th>
  </thead>

  <tbody>
    <% @pokedexes.each_with_index do |pokedex, index| %>
      <tr>
        <td><%= @row_number + index %> </td>
        <td><%= pokedex.name %></td>
        <td><%= pokedex.base_health_point %></td>
        <td><%= pokedex.base_attack %></td>
        <td><%= pokedex.base_defence %></td>
        <td><%= pokedex.base_speed %></td>
        <td><%= pokedex.element_type %></td>
        <td><%= link_to 'Show', pokedex,  class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_pokedex_path(pokedex),  class: 'btn btn-warning'%></td>
        <td><%= link_to 'Destroy', pokedex,  class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="pagin float-right">
<%= will_paginate @dexes, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer %>
</div>



          </div>
</main>
