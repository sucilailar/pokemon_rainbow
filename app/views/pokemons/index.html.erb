  <% if notice.present?%>
      <p id="notice" class="alert alert-warning mt-3"><%= notice %></p>
    <%end%>

<h1>Pokemons</h1>
  <%= link_to 'New Pokemon', new_pokemon_path , class: 'btn btn-primary'%>
  <%= link_to 'Heal All', heal_all_pokemons_path , class: 'btn btn-success'%>
<table class="table table-striped mt-3" border="1">
  <thead class="thead-dark text-center">
    <tr>
      <th>No</th>
      <th>Name</th>
      <th>Pokedex</th>
      <th>Level</th>
      <th>Max healh point</th>
      <th>Current Health point</th>
      <th>Attack</th>
      <th>Defence</th>
      <th>Speed</th>
      <th>Current experience</th>
      <th colspan="4">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @pokemons.each_with_index do |pokemon, index| %>
      <tr>
        <td><%= @row_number + index %></td>
        <td><%= pokemon.name %></td>
        <td><%= pokemon.pokedex.name %></td>
        <td><%= pokemon.level %></td>
        <td><%= pokemon.max_health_point %></td>
        <td><%= pokemon.current_health_point %></td>
        <td><%= pokemon.attack %></td>
        <td><%= pokemon.defence %></td>
        <td><%= pokemon.speed %></td>
        <td><%= pokemon.current_experience %></td>
        <td><%= link_to 'Heal', heal_pokemon_path(pokemon) , class: 'btn btn-success'%></td>
        <td><%= link_to 'Show', pokemon , class: 'btn btn-primary'%></td>
        <td><%= link_to 'Edit', edit_pokemon_path(pokemon), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', pokemon, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="pagin float-right">
<%= will_paginate @dexes, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer %>
</div>
