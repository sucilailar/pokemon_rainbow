<p id="notice"><%= notice %></p>

<h1>Pokemon Battles</h1>

<%= link_to 'New Pokemon Battle', new_pokemon_battle_path ,  class: 'btn btn-primary' %>

<table class="table table-striped mt-3" border="1">
  <thead class="thead-dark text-center">
    <tr>
      <th>No</th>
      <th>Pokemon 1</th>
      <th>Pokemon 2</th>
      <th>Turn</th>
      <th>State</th>
      <th>Winner</th>
      <th>Loser</th>
      <th>Experience</th>
      <th>Pokemon1 Max HP</th>
      <th>Pokemon 2 Max HP</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @pokemon_battles.each_with_index do |pokemon_battle, index| %>
      <tr>
        <td><%= @row_number + index %></td>
        <td><%= pokemon_battle.pokemon1.name %></td>
        <td><%= pokemon_battle.pokemon2.name %></td>
        <td><%= pokemon_battle.current_turn %></td>
        <td><%= pokemon_battle.state %></td>
        <td><%= pokemon_battle.pokemon_winner_id %></td>
        <td><%= pokemon_battle.pokemon_loser_id %></td>
        <td><%= pokemon_battle.experience_gain %></td>
        <td><%= pokemon_battle.pokemon1_max_health_point %></td>
        <td><%= pokemon_battle.pokemon2_max_health_point %></td>
        <td><%= link_to 'Show', pokemon_battle,  class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_pokemon_battle_path(pokemon_battle), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', pokemon_battle, class: 'btn btn-danger' , method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="pagin float-right">
<%= will_paginate @dexes, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer %>
</div>
<br>


